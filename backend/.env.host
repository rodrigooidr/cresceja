# ===========================
# CresceJá - .env (HOST)
# Rodando scripts/servidor no Windows
# ===========================

# Postgres no HOST (porta publicada pelo Docker: 5432:5432)
DATABASE_URL=postgres://cresceja:cresceja123@localhost:5432/cresceja_db

# Redis no HOST (compose mapeia 6380->6379)
REDIS_URL=redis://localhost:6380

# Porta do backend local
PORT=4000

# CORS (múltiplas origens separadas por vírgula)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT
JWT_SECRET=CresceJa_jwt123

# Ambiente / Logs
NODE_ENV=development
LOG_LEVEL=info

# Modo de teste do WS
WS_TEST_MODE=true
ALLOWED_WS_TEST_EMAIL=rodrigooidr@hotmail.com

# Uploads
UPLOAD_DIR=./uploads

# ===== Integrações (preencha se usar) =====
WHATSAPP_PROVIDER=
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=
WH_VERIFY_TOKEN=
SENTRY_DSN=
WA_PHONE_NUMBER_ID=
WA_TOKEN=
IG_VERIFY_TOKEN=dev
FB_VERIFY_TOKEN=dev

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:4000/api/calendar/google/callback

# Azure OAuth
AZURE_TENANT_ID=common
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_REDIRECT_URI=http://localhost:4000/api/calendar/outlook/callback

# Taxas do produto (ex.: IA)
RATE_ATTEND=0.0005
RATE_CONTENT=0.02

# Telemetria & Handoff
TELEMETRY_ENABLED=true
HANDOFF_AUTO_DISABLE_IA=true
HANDOFF_ALERT_SOUND_URL=/assets/alerts/handoff.mp3
